{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "grunt",
    
    "tasks": [
        {
            "label": "build:release",
            "type": "grunt",
            "task": "build:release",
            "problemMatcher": [
                "$lessCompile",
                "$tsc",
                "$jshint"
            ],
            "group": {
                "_id": "build",
                "isDefault": false
            }
        },
        {
            "label": "test",
            "type": "grunt",
            "task": "test",
            "problemMatcher": [],
            "group": {
                "_id": "test",
                "isDefault": false
            }
        }
    ]
    
}